    <script>
        // Real-time Clock and Date
        function updateLuxuryTime() {
            const now = new Date();
            
            // Update time
            const timeOptions = { 
                hour: '2-digit', 
                minute: '2-digit',
                second: '2-digit',
                hour12: false
            };
            document.getElementById('luxury-time').textContent = now.toLocaleTimeString('en-US', timeOptions);
            
            // Update date
            const dateOptions = { 
                weekday: 'long', 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
            };
            document.getElementById('luxury-date').textContent = now.toLocaleDateString('en-US', dateOptions);
            
            // Update greeting
            updateDynamicGreeting(now);
            
            // Update relative times
            updateRelativeTimes(now);
        }

        function updateDynamicGreeting(now) {
            const hour = now.getHours();
            let greeting;
            
            if (hour < 12) {
                greeting = "Good Morning";
            } else if (hour < 17) {
                greeting = "Good Afternoon";
            } else {
                greeting = "Good Evening";
            }
            
            document.getElementById('dynamic-greeting').textContent = greeting;
        }

        // Session Timer
        let sessionStart = Date.now();
        function updateSessionTimer() {
            const now = Date.now();
            const diff = now - sessionStart;
            const minutes = Math.floor(diff / (1000 * 60));
            const seconds = Math.floor((diff % (1000 * 60)) / 1000);
            
            const formattedTime = 
                String(minutes).padStart(2, '0') + ':' +
                String(seconds).padStart(2, '0');
            
            document.getElementById('session-timer').textContent = formattedTime;
        }

        // Simulated Real-time Data Updates
        function updateRealTimeStats() {
            // Simulate vehicle views
            const viewedCount = Math.floor(Math.random() * 5) + 10;
            document.getElementById('viewed-count').textContent = viewedCount;
            document.getElementById('viewed-trend').textContent = `${Math.floor(Math.random() * 10) + 5}%`;
            
            // Simulate saved vehicles
            const savedCount = Math.floor(Math.random() * 3) + 3;
            document.getElementById('saved-count').textContent = savedCount;
            document.getElementById('saved-badge').textContent = savedCount;
            document.getElementById('saved-trend').textContent = `${Math.floor(Math.random() * 2) + 1} new`;
            
            // Simulate search activity
            const searchCount = Math.floor(Math.random() * 4) + 6;
            document.getElementById('search-count').textContent = searchCount;
            
            // Update inventory counts
            document.getElementById('total-vehicles').textContent = Math.floor(Math.random() * 50) + 100;
            document.getElementById('new-today').textContent = Math.floor(Math.random() * 8) + 2;
            
            // Update market insights
            document.getElementById('price-trend').textContent = `$${(Math.random() * 10000 + 40000).toLocaleString()}`;
            document.getElementById('inventory-count').textContent = Math.floor(Math.random() * 50) + 100;
            document.getElementById('view-count').textContent = Math.floor(Math.random() * 500) + 1000;
        }

        // Update relative timestamps
        function updateRelativeTimes(now) {
            const recentUpdate = document.getElementById('recent-update');
            const sessionSeconds = Math.floor((now - sessionStart) / 1000);
            
            if (sessionSeconds < 60) {
                recentUpdate.textContent = 'Updated just now';
            } else if (sessionSeconds < 3600) {
                const minutes = Math.floor(sessionSeconds / 60);
                recentUpdate.textContent = `Updated ${minutes} min ago`;
            } else {
                recentUpdate.textContent = 'Updated today';
            }
            
            // Update inventory stream timestamps
            const update1 = document.getElementById('update-time-1');
            const update2 = document.getElementById('update-time-2');
            
            update1.textContent = sessionSeconds < 120 ? 'Just now' : `${Math.floor(sessionSeconds / 60)} min ago`;
            update2.textContent = sessionSeconds < 300 ? '2 min ago' : `${Math.floor((sessionSeconds - 120) / 60)} min ago`;
        }

        // Simulate weather data
        function updateWeather() {
            const weatherConditions = ['Sunny', 'Partly Cloudy', 'Cloudy', 'Clear'];
            const temperatures = [68, 72, 75, 70, 73];
            const icons = ['fa-sun', 'fa-cloud-sun', 'fa-cloud', 'fa-moon'];
            
            const randomCondition = weatherConditions[Math.floor(Math.random() * weatherConditions.length)];
            const randomTemp = temperatures[Math.floor(Math.random() * temperatures.length)];
            const randomIcon = icons[Math.floor(Math.random() * icons.length)];
            
            const weatherElement = document.getElementById('luxury-weather');
            weatherElement.innerHTML = `<i class="fas ${randomIcon}"></i><span>${randomTemp}° • ${randomCondition}</span>`;
        }

        // Initialize all real-time features
        document.addEventListener('DOMContentLoaded', function() {
            // Start real-time updates
            updateLuxuryTime();
            updateSessionTimer();
            updateRealTimeStats();
            updateWeather();
            
            // Set up intervals
            setInterval(updateLuxuryTime, 1000);
            setInterval(updateSessionTimer, 1000);
            setInterval(updateRealTimeStats, 5000); // Update stats every 5 seconds
            setInterval(updateWeather, 30000); // Update weather every 30 seconds
            
            // Simulate initial data
            setTimeout(() => {
                document.getElementById('search-time').textContent = '2 min ago';
            }, 2000);
        });

        // Quick action functions (placeholder)
        function scheduleTestDrive() {
            alert('Redirecting to test drive scheduling...');
        }

        function contactConcierge() {
            alert('Connecting you with our concierge service...');
        }

        function viewSavedVehicles() {
            alert('Showing your saved vehicles...');
        }

        function downloadBrochure() {
            alert('Downloading premium catalog...');
        }
    </script>

