<header class="site-header">
  <a class="skip-link" href="#main">Skip to content</a>

  <!-- BRAND + ACCOUNT (TOP ROW) -->
  <div class="brand-row">
    <p class="brand">CSE <span>Motors</span></p>

    <!-- ACCOUNT DROPDOWN - DYNAMIC BASED ON JWT AUTH -->
    <div class="account-menu">
      <button
        class="account-link account-toggle"
        type="button"
        aria-haspopup="true"
        aria-expanded="false"
      >
        <i class="fas fa-user-circle" aria-hidden="true"></i>
        <span>
          <% if (user) { %>
            <%= user.firstName %> <%= user.lastName %>
          <% } else { %>
            My Account
          <% } %>
        </span>
        <i class="fas fa-chevron-down caret" aria-hidden="true"></i>
      </button>

      <ul class="account-dropdown" aria-label="Account options">
        <% if (user) { %>
          <!-- USER IS LOGGED IN VIA JWT -->
          <li class="user-welcome-item">
            <div class="user-info">
              <strong><%= user.firstName %> <%= user.lastName %></strong>
              <span class="user-email"><%= user.email %></span>
              <% if (user.role === 'Employee' || user.role === 'Admin') { %>
                <span class="user-role"><%= user.role %></span>
              <% } %>
            </div>
          </li>
          <li class="dropdown-divider"></li>
          <li><a href="/account/dashboard"><i class="fas fa-tachometer-alt"></i>Dashboard</a></li>
          <li><a href="/account/update"><i class="fas fa-user-edit"></i>Update Profile</a></li>
          <li><a href="/account/orders"><i class="fas fa-receipt"></i>My Orders</a></li>
          <li><a href="/account/saved"><i class="fas fa-heart"></i>Saved Vehicles</a></li>
          
          <!-- ADMIN/EMPLOYEE LINKS -->
          <% if (user.role === 'Employee' || user.role === 'Admin') { %>
            <li class="dropdown-divider"></li>
            <li><a href="/inv/manage"><i class="fas fa-cog"></i>Manage Inventory</a></li>
            <li><a href="/account/admin"><i class="fas fa-shield-alt"></i>Admin Panel</a></li>
          <% } %>
          
          <li class="dropdown-divider"></li>
          <li>
            <a href="/account/logout" class="logout-link">
              <i class="fas fa-sign-out-alt"></i>Logout
            </a>
          </li>
        <% } else { %>
          <!-- USER IS NOT LOGGED IN -->
          <li><a href="/account/login"><i class="fas fa-sign-in-alt"></i>Login</a></li>
          <li><a href="/account/register"><i class="fas fa-user-plus"></i>Sign Up</a></li>
          <li class="dropdown-divider"></li>
          <li><a href="/account/forgot-password"><i class="fas fa-key"></i>Forgot Password</a></li>
        <% } %>
      </ul>
    </div>
  </div>

  <!-- MAIN NAV BAR -->
  <nav class="main-nav" aria-label="Main navigation">
    <ul class="nav-list">
      <%
        // Use dynamic nav if available, otherwise fall back to hardcoded links
        if (typeof nav !== 'undefined' && nav) {
          // Output the dynamic navigation HTML
      %>
        <%- nav %>
      <%
        } else {
          // Fallback to original hardcoded links
          const links = [
            { href: '/',        label: 'Home',     match: 'CSE Motors' },
            { href: '/custom',  label: 'Custom Shop (All Vehicles)', match: 'Custom' },
            { href: '/sport',   label: 'Sport Cars', match: 'Sport' },
            { href: '/suv',     label: 'SUVs',      match: 'SUV' },
            { href: '/sedan',   label: 'Sedans',    match: 'Sedan' },
            { href: '/truck',   label: 'Trucks',    match: 'Truck' },
          ];
      %>
          <% links.forEach(link => { %>
            <li>
              <a href="<%= link.href %>"
                 <%= title && title.startsWith(link.match) ? 'class="current-page" aria-current="page"' : '' %>>
                <%= link.label %>
              </a>
            </li>
          <% }) %>
      <%
        }
      %>
      
      <!-- DYNAMIC NAVIGATION BASED ON JWT AUTHENTICATION -->
      <% if (user) { %>
        <li class="auth-nav-item">
          <a href="/account/dashboard" class="nav-dashboard-link">
            <i class="fas fa-tachometer-alt"></i>
            Dashboard
          </a>
        </li>
        <% if (user.role === 'Employee' || user.role === 'Admin') { %>
          <li class="auth-nav-item">
            <a href="/inv/manage" class="nav-admin-link">
              <i class="fas fa-cog"></i>
              Manage Inventory
            </a>
          </li>
          <li class="auth-nav-item">
            <a href="/account/admin" class="nav-admin-link">
              <i class="fas fa-shield-alt"></i>
              Admin
            </a>
          </li>
        <% } %>
      <% } else { %>
        <li class="auth-nav-item">
          <a href="/account/login" class="nav-login-link">
            <i class="fas fa-sign-in-alt"></i>
            Login
          </a>
        </li>
        <li class="auth-nav-item">
          <a href="/account/register" class="nav-register-link">
            <i class="fas fa-user-plus"></i>
            Register
          </a>
        </li>
      <% } %>
    </ul>
  </nav>
</header>

<style>
  /* Enhanced Account Dropdown Styles */
  .user-welcome-item {
    padding: 12px 16px;
    background: #f8fafc;
    border-bottom: 1px solid #e2e8f0;
  }

  .user-info {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .user-info strong {
    color: #1e293b;
    font-size: 0.95rem;
  }

  .user-email {
    color: #64748b;
    font-size: 0.8rem;
  }

  .user-role {
    background: #059669;
    color: white;
    padding: 2px 8px;
    border-radius: 12px;
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: capitalize;
    align-self: flex-start;
  }

  .dropdown-divider {
    height: 1px;
    background: #e2e8f0;
    margin: 8px 0;
  }

  .account-dropdown a {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 10px 16px;
    color: #374151;
    text-decoration: none;
    transition: all 0.2s ease;
    width: 100%;
    font-size: 0.9rem;
    cursor: pointer;
    text-align: left;
    border: none;
    background: none;
  }

  .account-dropdown a:hover {
    background: #f1f5f9;
    color: #059669;
  }

  .account-dropdown a i {
    width: 16px;
    text-align: center;
    color: #64748b;
  }

  .account-dropdown a:hover i {
    color: #059669;
  }

  .logout-link {
    color: #dc2626 !important;
  }

  .logout-link:hover {
    color: #b91c1c !important;
    background: #fef2f2 !important;
  }

  .logout-link i {
    color: #dc2626 !important;
  }

  /* Auth Navigation Items */
  .auth-nav-item {
    display: none; /* Hidden by default, show on mobile if needed */
  }

  /* Enhanced account toggle for logged-in users */
  .account-link[aria-expanded="true"] {
    background: #059669;
    color: white;
  }

  .account-link[aria-expanded="true"] .caret {
    transform: rotate(180deg);
  }

  /* Logged-in user indicator */
  .account-link:has(+ .account-dropdown .user-welcome-item) {
    font-weight: 600;
    color: #059669;
  }

  /* Account menu open state */
  .account-menu.open .account-dropdown {
    transform: translateY(0);
    opacity: 1;
    visibility: visible;
  }

  /* Smooth transitions */
  .account-dropdown {
    transition: all 0.3s ease;
  }

  .account-link .caret {
    transition: transform 0.3s ease;
  }

  /* Responsive: Show auth items in main nav on mobile */
  @media (max-width: 768px) {
    .auth-nav-item {
      display: block;
    }
    
    .nav-dashboard-link,
    .nav-admin-link,
    .nav-login-link,
    .nav-register-link {
      display: flex;
      align-items: center;
      gap: 8px;
      padding: 10px 16px;
    }
    
    .nav-dashboard-link i,
    .nav-admin-link i,
    .nav-login-link i,
    .nav-register-link i {
      width: 16px;
      text-align: center;
    }
  }
</style>

<script>
document.addEventListener("DOMContentLoaded", () => {

  /* ===== My Account dropdown ===== */
  const accountMenu = document.querySelector(".account-menu");
  const accountToggle = accountMenu?.querySelector(".account-toggle");

  if (accountMenu && accountToggle) {
    accountToggle.addEventListener("click", e => {
      e.stopPropagation();
      const expanded = accountToggle.getAttribute("aria-expanded") === "true";
      const newState = !expanded;

      accountToggle.setAttribute("aria-expanded", String(newState));
      accountMenu.classList.toggle("open", newState);
      
      // Add visual feedback for logged-in users
      if (newState) {
        accountToggle.style.background = '#059669';
        accountToggle.style.color = 'white';
      } else {
        accountToggle.style.background = '';
        accountToggle.style.color = '';
      }
    });
  }

  /* ===== Global click to close dropdown ===== */
  document.addEventListener("click", () => {
    if (accountMenu && accountToggle) {
      accountMenu.classList.remove("open");
      accountToggle.setAttribute("aria-expanded", "false");
      accountToggle.style.background = '';
      accountToggle.style.color = '';
    }
  });

  /* ===== Handle logout confirmation ===== */
  const logoutLinks = document.querySelectorAll('.logout-link');
  logoutLinks.forEach(link => {
    link.addEventListener('click', (e) => {
      // Optional: Add confirmation dialog
      if (!confirm('Are you sure you want to logout?')) {
        e.preventDefault();
      }
    });
  });

  /* ===== Add visual indicator for logged-in state ===== */
  function updateAccountToggleStyle() {
    const userWelcome = document.querySelector('.user-welcome-item');
    if (userWelcome && accountToggle) {
      accountToggle.style.fontWeight = '600';
      accountToggle.style.color = '#059669';
    }
  }

  // Initialize styles
  updateAccountToggleStyle();

});
</script>